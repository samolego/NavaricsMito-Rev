<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/login_bg" android:scaleType="centerCrop" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <ImageView android:id="@+id/btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:src="@drawable/add_note_act_back_btn_bg" android:layout_marginStart="10dp"/>
    <EditText android:gravity="top" android:id="@+id/etNote" android:background="@drawable/add_note_box_bg" android:paddingTop="7dp" android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginTop="80dp" android:maxHeight="180dp" android:hint="@string/input_your_note_here" android:paddingStart="13dp" android:paddingEnd="13dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
    <Button android:textColor="@color/white" android:id="@+id/btnSave" android:background="@drawable/save_note_btn_bg" android:layout_width="match_parent" android:layout_height="47dp" android:layout_marginTop="15dp" android:text="@string/save" android:layout_below="@+id/etNote" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
</RelativeLayout>
