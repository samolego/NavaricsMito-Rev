        <TextView android:textSize="18sp" android:textColor="@color/color_000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="51dp" android:text="@string/mode2" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/tv_mode2_more" android:background="@drawable/keymap_dian" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_mode3" android:background="@drawable/settings_item_bg" android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="12dp">
        <ImageView android:id="@+id/iv_select3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:src="@drawable/keymap_o" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/color_000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="51dp" android:text="@string/mode3" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/tv_mode3_more" android:background="@drawable/keymap_dian" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
