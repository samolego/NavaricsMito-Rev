<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout android:id="@+id/tab_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <TextView android:textSize="@dimen/sp_14" android:textColor="@color/black" android:id="@+id/tvPhotoTab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:text="@string/photo" android:layout_marginEnd="@dimen/dp_15" app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="@color/black" android:id="@+id/tvVideoTab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:text="@string/video" android:layout_marginStart="@dimen/dp_15" app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="#4a90e2" android:id="@+id/tvChoose" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:text="@string/choose" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dp_17" android:layout_alignParentEnd="true" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
        <android.support.constraint.Guideline android:orientation="vertical" android:id="@+id/guideline" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.5"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/black" android:id="@+id/tvSelected" android:paddingBottom="@dimen/dp_6" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_40" android:text="0 selected" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    </android.support.constraint.ConstraintLayout>
    <RelativeLayout android:id="@+id/bottomContainer" android:background="@color/white" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/ivBottomRobotIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/homepage_robot_normal" android:layout_marginStart="32dp"/>
        <ImageView android:id="@+id/ivMediaLibraryIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/homepage_media_selected" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/ivDiveLogIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/homepage_divelog_normal" android:layout_marginEnd="32dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/multiSelectionBar" android:background="@color/white" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="64dp" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:id="@+id/ivDelete" android:layout_width="46dp" android:layout_height="46dp" android:src="@drawable/delete_gray" android:scaleType="center"/>
            <ImageView android:id="@+id/ivShare" android:layout_width="46dp" android:layout_height="46dp" android:src="@drawable/share_gray" android:scaleType="center" android:layout_marginStart="40dp"/>
        </LinearLayout>
    </RelativeLayout>
    <com.navatics.app.MyViewPager android:id="@+id/tab_viewpager" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottomContainer" android:layout_below="@+id/tab_container"/>
</RelativeLayout>
