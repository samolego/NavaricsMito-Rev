<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextureView android:layout_gravity="center" android:id="@+id/surface" android:layout_width="match_parent" android:layout_height="match_parent" android:onClick="toHidderView"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="#7cfc00" android:layout_gravity="left" android:id="@+id/tv_bitrate" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="Bitrate"/>
        <Button android:id="@+id/btn_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save"/>
    </LinearLayout>
</RelativeLayout>
