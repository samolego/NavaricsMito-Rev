<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="#fff2f2f2" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="18dp" android:textColor="#1c1c1c" android:gravity="center" android:id="@+id/btn_photo" android:background="#ffffff" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="拍照"/>
        <View android:background="#aa000000" android:layout_width="match_parent" android:layout_height="0.1dp"/>
        <Button android:textSize="18dp" android:textColor="#1c1c1c" android:gravity="center" android:id="@+id/btn_picture" android:background="#ffffff" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="从相册选择"/>
        <Button android:textSize="18dp" android:textColor="#1c1c1c" android:gravity="center" android:id="@+id/btn_cancel" android:background="#ffffff" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="取消"/>
    </LinearLayout>
</LinearLayout>
