<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <SurfaceView android:id="@+id/capture_preview" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/capture_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/capture_mask_top" android:background="@drawable/shadow" android:layout_width="match_parent" android:layout_height="160dp" android:layout_alignParentTop="true"/>
        <RelativeLayout android:id="@+id/capture_crop_view" android:background="@mipmap/img_scan" android:layout_width="200dp" android:layout_height="200dp" android:layout_below="@+id/capture_mask_top" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/capture_scan_line" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:src="@mipmap/scanbar" android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <ImageView android:id="@+id/capture_mask_bottom" android:background="@drawable/shadow" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/capture_crop_view" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/capture_mask_left" android:background="@drawable/shadow" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toLeftOf="@+id/capture_crop_view" android:layout_above="@+id/capture_mask_bottom" android:layout_below="@+id/capture_mask_top" android:layout_alignParentLeft="true"/>
        <ImageView android:id="@+id/capture_mask_right" android:background="@drawable/shadow" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toRightOf="@+id/capture_crop_view" android:layout_above="@+id/capture_mask_bottom" android:layout_below="@+id/capture_mask_top" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="14dp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="100dp" android:text="@string/scan_prompt" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="20dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/btn_scan_local_pic" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="@string/btn_scan_local_pic" android:drawablePadding="8dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="20dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/btn_open_flashlight" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:text="@string/btn_open_flashlight_text" android:drawablePadding="15dp" android:layout_above="@+id/btn_scan_local_pic" android:layout_centerHorizontal="true"/>
</RelativeLayout>
